@model EmployeePortal.ViewModels.RegisterVM
@{
}

<form asp-action="Register" method="post" class="p-4 rounded shadow bg-glass register-form" novalidate>
    <div asp-validation-summary="All" class="text-danger small mb-3"></div>
    <div class="text-center mb-3">
        <h1 class="h4 mb-3 fw-normal">Please register</h1>
    </div>
    <div class="form-floating mb-3">
        <input type="text" asp-for="FullName" class="form-control bg-glass" id="floatingName" placeholder="Filan Fisteku" required>
        <label for="floatingName" class="bg-trans">Full Name</label>
        <span class="text-danger" asp-validation-for="FullName"></span>
    </div>

    <div class="form-floating mb-3">
        <input type="email" asp-for="Email" class="form-control bg-glass" id="floatingInput" placeholder="name@example.com" required>
        <label for="floatingInput" class="bg-trans">Email address</label>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-floating mb-3">
        <input type="password" asp-for="Password" class="form-control bg-glass" id="floatingPassword" placeholder="Password" required>
        <label for="floatingPassword" class="bg-trans">Password</label>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>


    <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-lg">Register</button>
    </div>

</form>